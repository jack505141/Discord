<Window x:Class="WpfApp1.WebView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="WebView - HTML 瀏覽器" Height="600" Width="900"
        AllowDrop="True"
        DragEnter="Window_DragEnter"
        DragOver="Window_DragOver"
        Drop="Window_Drop">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具列 -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📄 拖放 HTML 檔案到視窗中即可顯示" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          FontSize="14"
                          Margin="0,0,20,0"/>
                <Button x:Name="BackButton" 
                        Content="← 返回" 
                        Width="80" 
                        Height="30"
                        Background="#34495E"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="OpenFileButton" 
                        Content="📂 開啟檔案" 
                        Width="100" 
                        Height="30"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OpenFileButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="ReloadButton" 
                        Content="🔄 重新載入" 
                        Width="100" 
                        Height="30"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ReloadButton_Click"
                        IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- 主要內容區域 -->
        <Grid Grid.Row="1">
            <!-- 拖放提示區域 (初始顯示) -->
            <Border x:Name="DropZone" 
                    Background="#ECF0F1"
                    BorderBrush="#BDC3C7"
                    BorderThickness="2"
                    CornerRadius="10"
                    Margin="20"
                    AllowDrop="True"
                    DragEnter="DropZone_DragEnter"
                    DragLeave="DropZone_DragLeave"
                    Drop="DropZone_Drop">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📁" 
                              FontSize="80" 
                              HorizontalAlignment="Center"
                              Foreground="#95A5A6"/>
                    <TextBlock Text="將 HTML 檔案拖放到這裡" 
                              FontSize="24" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Foreground="#34495E"
                              Margin="0,20,0,10"/>
                    <TextBlock Text="支援 .html 和 .htm 檔案" 
                              FontSize="16" 
                              HorizontalAlignment="Center"
                              Foreground="#7F8C8D"/>
                </StackPanel>
            </Border>

            <!-- WebView2 瀏覽器控件 -->
            <wv2:WebView2 x:Name="webView" 
                          Visibility="Collapsed"
                          NavigationStarting="WebView_NavigationStarting"
                          NavigationCompleted="WebView_NavigationCompleted"/>

            <!-- 載入中提示 -->
            <Border x:Name="LoadingOverlay" 
                    Background="#80000000" 
                    Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="⏳" 
                              FontSize="60" 
                              HorizontalAlignment="Center"
                              Foreground="White"/>
                    <TextBlock Text="載入中..." 
                              FontSize="20" 
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
