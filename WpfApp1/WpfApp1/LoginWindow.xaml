<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="安全登入"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" WindowStyle="None">

    <Border Background="#222E50" CornerRadius="10" Padding="20" BorderBrush="#5A86E1" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 標題 -->
            <TextBlock Text="🔒 輸入密碼" 
                       FontSize="18" FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"/>

            <!-- 密碼輸入框 -->
            <PasswordBox x:Name="PasswordInput"
                         Width="250" Height="35"
                         FontSize="14"
                         Background="#333A6D"
                         Foreground="White"
                         BorderBrush="#5A86E1"
                         BorderThickness="2"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Padding="5"
                         Grid.Row="1"/>

            <!-- 確認按鈕 -->
            <Button Content="✔ 確認"
        Width="120" Height="40"
        FontSize="16"
        FontWeight="Bold"
        Background="#5A86E1"
        Foreground="White"
        BorderThickness="0"
        Cursor="Hand"
        Margin="0,20,0,0"
        Click="Confirm_Click"
        Grid.Row="2">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Opacity" Value="0.9"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="#5A86E1" BlurRadius="8" ShadowDepth="0"/>
                            </Setter.Value>
                        </Setter>
                        <!-- ✅ `Trigger` 需要放在 `<Style.Triggers>` 內 -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>

