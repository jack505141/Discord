<Window x:Class="WpfApp1.BranchSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BranchSelectionWindow" Height="450" Width="800">
    
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="選擇分支" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

                <!-- 每個 Repository 的分支區塊 -->
                <StackPanel x:Name="BranchSelectionContainer" Orientation="Vertical"/>

                <!-- 確定按鈕 -->
                <Button Content="確定" Click="ConfirmBranchSelection_Click" Margin="10" HorizontalAlignment="Center" Width="120"/>
            </StackPanel>
        </ScrollViewer>
        <Grid Name="LoadingOverlay" Background="#AA000000"
          Visibility="Collapsed" Panel.ZIndex="999" Margin="-17,-14,-18,-19" Grid.RowSpan="4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="處理中，請稍候..." FontSize="16" Foreground="White"/>
                <ProgressBar IsIndeterminate="True" Width="200"/>
            </StackPanel>
        </Grid>
    </Grid>
    
    
</Window>
