<Window x:Class="WpfApp1.Instal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Git 安裝工具" Height="600" Width="400"  AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter">
    <Grid Margin="0,0,0,9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 安裝標題 -->
        <TextBlock Grid.Row="0" Text="安裝程式" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Clone URL 輸入區域 (可滾動) -->
        <ScrollViewer Grid.Row="1" Height="200" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel>
                <TextBlock Text="輸入repo Git路徑:" FontWeight="Bold"/>
                <StackPanel x:Name="CloneUrlContainer" Orientation="Vertical" />
                <Button Content="新增" Click="AddCloneUrl_Click" Margin="5"  x:Name="AddCloneButton"/>
                <Button Content="匯入" Click="ImportFromFile_Click" Margin="5"  x:Name="importCloneButton"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 一鍵安裝按鈕 -->
        <Button Grid.Row="3" Content="一鍵安裝" Click="InstallAll_Click" Margin="10" HorizontalAlignment="Center" Width="120" x:Name="InstallAll"/>
        

        <!-- 狀態顯示區 -->
        <TextBlock Grid.Row="4" Text="狀態顯示:" FontWeight="Bold" Margin="10"/>
        <TextBox x:Name="StatusTextBox" Grid.Row="4" Margin="10" Height="100" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <!-- 下一步按鈕 -->
        <Button Grid.Row="5" Content="下一步" Click="NextStep_Click" Margin="10" HorizontalAlignment="Right" Width="100" Visibility="Hidden" x:Name="NextStepButton"/>
        <Grid Name="LoadingOverlay" Background="#AA000000"
          Visibility="Collapsed" Panel.ZIndex="999" Margin="0,0,0,-15" Grid.RowSpan="6">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="處理中，請稍候..." FontSize="16" Foreground="White"/>
                <ProgressBar IsIndeterminate="True" Width="200"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
