<Window x:Class="WpfApp1.Assemble"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assemble" Height="500" Width="800"
       >
    <Grid Background="#F0F0F0" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- 拖曳區域 -->
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10"
                Width="300" Height="200"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="White"
                AllowDrop="True" Drop="Border_Drop" DragOver="Border_DragOver">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="請將檔案拖曳到這裡" FontSize="16" Margin="0,10,0,0" />
            </StackPanel>
        </Border>
        <Button Content="⬅ 上一頁" Width="100" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="0,0,0,0" Click="BackButton_Click"/>

        <!-- 顯示清單與數量 -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock x:Name="FileCountText" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" />
            <ListBox x:Name="FileListBox"
         Height="150"
         SelectionMode="Extended"
         KeyDown="FileListBox_KeyDown" />

        </StackPanel>
    </Grid>
</Window>
