<Window x:Class="WpfApp1.FoldConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="FoldConfig" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="📂 資料夾檢視與儲存" FontSize="20" FontWeight="Bold" Foreground="#3F51B5" Margin="0,0,0,10"/>

        <!-- Main Area -->
        <DockPanel Grid.Row="1" LastChildFill="True">
            <!-- 左側控制面板 -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="FolderPathBox" Width="600" Height="32" Padding="5" Margin="0,0,10,0"
                         VerticalContentAlignment="Center" />
                <Button Content="📁 載入" Width="100" Height="32" Click="LoadFolder_Click" Background="#2196F3" Foreground="White"/>
            </StackPanel>

            <!-- TreeView 顯示區 -->
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Background="White">
                <TreeView x:Name="FolderTreeView" Margin="5">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>
        </DockPanel>

        <!-- 儲存區塊 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
            <TextBlock Text="儲存檔名：" VerticalAlignment="Center" FontSize="14" />
            <TextBox x:Name="SaveNameBox" Width="300" Height="30" Margin="10,0,10,0" Padding="5"/>
            <Button Content="💾 儲存選取" Width="120" Height="30" Click="SaveSelection_Click" Background="#4CAF50" Foreground="White"/>
            <Button Content="上一頁" Width="150" Height="30" Click="Goback_Click" Background="#4CAF50" Foreground="White" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
